<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red_error" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="8dp">
        <rotate android:fromDegrees="0" android:toDegrees="0">
            <bitmap android:src="@drawable/ic_dropdown_arrow" android:gravity="end" />
        </rotate>
    </item>
</layer-list>